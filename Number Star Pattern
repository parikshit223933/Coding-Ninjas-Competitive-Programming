#include<iostream>
using namespace std;
int main(){
	int i,j,n,l;
    cin>>n;
    l=n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=(n-i+1);j++)
            cout<<j;
        if(i>1){
         for(j=1;j<=2*(i-1);j++)
             cout<<"*";
        }
        for(j=l;j>=1;j--)
            cout<<j;
        l--;
        cout<<"\n";
    }
}


